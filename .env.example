# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/ai-code-builder
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ai-code-builder
MONGODB_URI=mongodb://localhost:27017/ai-code-builder

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a strong secret key for JWT tokens
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-abc123def456ghi789
JWT_EXPIRES_IN=7d

# =============================================================================
# FREE AI API KEYS (Get these from respective platforms)
# =============================================================================

# Google AI Studio (RECOMMENDED - 1M tokens/month FREE)
# Get from: https://aistudio.google.com/
# Steps: Sign in → Get API Key → Create project → Copy key
GOOGLE_API_KEY=AIzaSyExample123_your_google_ai_studio_key_here

# Groq (Ultra-fast FREE inference)  
# Get from: https://console.groq.com/
# Steps: Create account → API Keys → Create new key
GROQ_API_KEY=gsk_example123_your_groq_api_key_here

# Hugging Face (300 requests/hour FREE)
# Get from: https://huggingface.co/
# Steps: Create account → Settings → Access Tokens → Create token
HUGGINGFACE_API_TOKEN=hf_example123_your_hugging_face_token_here

# DeepSeek Coder (FREE via OpenRouter)
# Get from: https://openrouter.ai/
# Steps: Create account → Keys → Create key
DEEPSEEK_API_KEY=sk-or-v1-example123_your_deepseek_key_here
OPENROUTER_API_KEY=sk-or-v1-example123_your_openrouter_key_here

# Together AI ($25 FREE credits)
# Get from: https://api.together.xyz/
# Steps: Sign up → Dashboard → API Keys → Create key
TOGETHER_API_KEY=example123_your_together_ai_key_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Your React frontend URL (usually http://localhost:3000 in development)
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
# Directory for uploaded files
UPLOAD_DIR=./uploads

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,svg,pdf,zip,webp,ico

# =============================================================================
# EXTERNAL SERVICES (Optional - for advanced features)
# =============================================================================

# GitHub Token (Optional - for GitHub integration)
# Get from: https://github.com/settings/tokens
# Scopes needed: repo, user:email
GITHUB_TOKEN=ghp_example123_your_github_token_here

# Vercel Token (Optional - for deployment integration)
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=example123_your_vercel_token_here

# Netlify Token (Optional - for deployment integration)  
# Get from: https://app.netlify.com/user/applications/personal
NETLIFY_TOKEN=example123_your_netlify_token_here

# Railway Token (Optional - for deployment integration)
# Get from: https://railway.app/account/tokens
RAILWAY_TOKEN=example123_your_railway_token_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/app.log

# Enable console logging (true/false)
CONSOLE_LOGS=true

# =============================================================================
# ADVANCED FEATURES (Optional)
# =============================================================================

# Redis URL (Optional - for caching and sessions)
# REDIS_URL=redis://localhost:6379

# Email service configuration (Optional - for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Webhook URL for notifications (Optional)
# WEBHOOK_URL=https://hooks.slack.com/your-webhook

# Analytics tracking ID (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXX-X

# Sentry DSN for error tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn-here
